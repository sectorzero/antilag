#!/bin/sh

set -x

# input : package_name, directory_path

if [ -z "$ANTILAG_HOME" ]; then
    exit 1
fi

package_name=$1
directory_path=$2

if [ ! -d "$directory_path" ]; then
    exit 1
fi

if [ -z "$package_name" ]; then
    exit 1
fi

abs_path="$directory_path/$package_name"
if [ -e "$abs_path" ]; then
    exit 1
fi

mkdir $abs_path

cd $abs_path

git init
cp $ANTILAG_HOME/stubs/.gitignore.stub .gitignore

sed 's/_PACKAGE_NAME_/'"$package_name"'/' $ANTILAG_HOME/stubs/CMakeLists.txt.template > CMakeLists.txt

mkdir .cmake
cp $ANTILAG_HOME/stubs/antilag.cmake .cmake
cp $ANTILAG_HOME/stubs/build-flags.cmake .cmake
cp $ANTILAG_HOME/stubs/build-definitions.cmake .cmake
cp $ANTILAG_HOME/stubs/utils.cmake .cmake

mkdir .build-standard
ln -s .build-standard build

git add .
git commit -m "$package_name : Initial ( antilag autogenerated )"

cd build
cmake ..


